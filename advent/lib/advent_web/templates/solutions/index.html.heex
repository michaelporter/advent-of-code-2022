<header>
  <nav>
    <ul>
    <%= for num <- 1..25 do %>
      <li><a href={"/solutions/#{num}"}><%= num %></a></li>
    <%= end %>
    </ul>
  </nav>
</header>

<section class="phx-hero">
  <h1>Solutions for Day <%= @day %></h1>
</section>

<section class="">
  <h1>Part One:</h1>
  <%= @count %>
  <p>
    <%= for row <- @grid do %>
      <p>
      <%= for cell <- row do %>
        <%= if cell == "X" do %>
          <span style="color:red; font-weight:bold;">X</span>
        <%= else %>
          <span style="color:black; font-weight:bold;">X</span>
        <%= end %>
      <%= end %>
      </p>
    <%= end %>

  </p>

  <h1>Part Two:</h1>
  <p><%= @part_two %></p>
</section>
